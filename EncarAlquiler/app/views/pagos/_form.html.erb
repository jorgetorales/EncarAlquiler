<%= form_for(@pago) do |f| %>
  <div class="container">
  <div class="col-md-12">
  <% if @pago.errors.any? %>
    <div  class="alert alert-dismissible alert-danger">
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <h2><%= pluralize(@pago.errors.count, "error") %> complete los datos antes de guardar:</h2>
      <ul>
      <% @pago.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  </div>
  </div>
  <div class="container">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
      <div class="CSS_Table_Example">
        <table >
          <tr>
              <td><%= f.label :reserva_id %></td>
              <td><%= f.label :montoapagar %></td>
              <td>Acciones</td>
            </tr>
            <tr>
              <td><center>
              <% reservas_array = Reserva.all.map { |reserva| ["#{reserva.locatario.nombre } #{reserva.fecha_reserva } #{reserva.monto}", reserva.id] } %>
              <%= f.select(:reserva_id, options_for_select(reservas_array), { prompt: true}, {:class=>'form-control  input-sm select2', placeholder: 'Locatario', id: 'locatario' }) %>

              <center>
              </td>
              <td><center><%= f.number_field :montoapagar, class:"form-control input-sm" %></center></td>
              <td><center><%= button_tag(type: 'submit', class: "btn btn-success btn-sm") do %>
                  <span class="glyphicon glyphicon-floppy-disk"></span>
                  <% end %>
                  <button type="reset" class="btn btn-info btn-sm">
                      <i class="glyphicon glyphicon-refresh"></i>
                  </button>
              </center></td>
            </tr>
        </table>
      </div>
    </div>
  </div>
  <% end %>

