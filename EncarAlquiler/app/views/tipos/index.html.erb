<div class="container">
  <h1 class="text-center text-uppercase">
    Tipos
    <th>
      <%= link_to glyph(:plus), new_tipo_path, class: 'btn btn-primary btn-sm' %>
    </th>
  </h1>
    <div class="col-md-6 col-md-offset-3">
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <thead>
            <tr class="info">
              <th class="text-center">Nombre</th>
              <th class="text-center">Acciones</th>       
              
            </tr>
          </thead>

          <tbody>
            <% @tipos.each do |tipo| %>
              <tr class="text-center">
                <td><%= tipo.nombre %></td>
                <td>
                  
                <%= link_to glyph(:eye_open), tipo, class: 'btn btn-info btn-sm' %>
                <%= link_to glyph(:pencil), edit_tipo_path(tipo),  class: 'btn btn-warning btn-sm' %>
                <%= link_to glyph(:trash), tipo, class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Esta seguro?' } %>
               
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>