<%= form_for(@tipo) do |f| %> 
<div class="container">
  <div class"row">
    <div class="col-md-10 col-md-offset-1">
      <% if @tipo.errors.any? %>
        <div  class="alert alert-dismissible alert-danger">
          <button type="button" class="close" data-dismiss="alert">Ã—</button>
            <h2><%= pluralize(@tipo.errors.count, "error") %> complete los datos antes de guardar:</h2>
              <ul>
                <% @tipo.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
        </div>
      <% end %>
  <div class="col-md-8 col-md-offset-2">
    <div class="CSS_Table_Example">
      <table>
          <tr>
            <td><%= f.label :nombre %></td>
            <td>Acciones</td>
          </tr>
          <tr>
            <td><%= f.text_field :nombre, class:"form-control input-sm" %></td>
            <td><center><%= button_tag(type: 'submit', class: "btn btn-success btn-sm") do %>
              <span class="glyphicon glyphicon-floppy-disk"></span>
              <% end %>
              <button type="reset" class="btn btn-info btn-sm">
                  <i class="glyphicon glyphicon-refresh"></i>
              </button></center></td>
          </tr>
      </table>
    </div>
  </div>
</div>
</div>
<% end %>
