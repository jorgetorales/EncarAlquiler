<h1 class="espacio">Editar Tipos</h1>
<%= form_for(@tipo) do |f| %>
  <% if @tipo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tipo.errors.count, "error") %> prohibited this tipo from being saved:</h2>

      <ul>
      <% @tipo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6 col-md-offset-3">
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead>
          <tr class="success">
            <th class="text-center"><%= f.label :nombre %><br></th>
          </tr>
        </thead>
        
        <tbody>
          <tr>
            <td><%= f.text_field :nombre %></td>
          </tr>
        </tbody>
      </table>
    </div>
  
    <div class="actions">
      <%= f.submit "Guardar", class: "btn btn-success btn-xs" %>
    </div>
  </div>
<% end %>
