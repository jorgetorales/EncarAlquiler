<h1 class="text-center text-uppercase container">Tipos</h1>
<div class="col-md-6 col-md-offset-3">
	<div class="table-responsive">
	    <table class="table table-bordered table-hover">
	      <thead>
	        <tr class="info">
	          <th class="text-center">
	          	Nombre
	          </th>
	          <th class="text-center">
	          	Acciones
	          </th>

	        </tr>
	      </thead>

	      <tbody>
	          <tr class="text-center">
	            <td>
	            	<%= @tipo.nombre %>
	            </td>

	            <td>
	            	<%= link_to glyph(:pencil), edit_tipo_path(@tipo), class: 'btn btn-warning btn-sm' %>
					<%= link_to glyph(:arrow_left), tipos_path,  class: 'btn btn-info btn-sm' %>
	            </td>
	          </tr>
	      </tbody>
	    </table>
	</div>
</div>