<p id="notice"><%= notice %></p>

<h1>Reservas Realizadas</h1>

<table>
  <thead>
    <tr>
      <th>Locatario</th>
      <th>   </th>
      <th>Fecha reserva</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservas.each do |reserva| %>
      <tr>
        <td><%= reserva.locatario_id %></td>
        <th>   </th>
        <td><%= reserva.fecha_reserva %></td>
        <td><%= link_to glyph(:eye_open), reserva, class: 'btn btn-info btn-sm' %></td>
        <td><%= link_to glyph(:pencil), edit_reserva_path(reserva), class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to glyph(:trash), reserva, method: :delete, data: { confirm: 'Estas seguro?' }, class: 'btn btn-danger btn-sm'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to glyph(:plus), new_reserva_path, class: 'btn btn-primary btn-sm' %>
