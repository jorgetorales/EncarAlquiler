<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1 id="type">Olvidaste tu contraseÃ±a?</h1>
      </div>
    </div>
    <div class="col-lg-12">
      <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      <div class="field">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
      <div class="actions">
        <%= button_tag(type: 'submit', class: "btn btn-primary pull-right") do %>
          <span class="glyphicon glyphicon-user"></span> Cambiar clave
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "usuarios/shared/links" %>
