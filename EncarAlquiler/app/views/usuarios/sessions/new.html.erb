<div class="container espacio">
  <div class="row">
    <div class="col-lg-8" class="img-responsive">
            <img src="../img/adm.jpg" style="padding-top: 100px;" width="500" height="400" >
    </div>
    <div class="col-lg-3">
      <div class="page-header">
        <h2>Iniciar Sesi√≥n</h2>
      </div>
    
      <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true %>
        </div>
        <div class="field"> 
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me, label: "Recordarme" %>
          </div>
        <% end -%>
          <%= button_tag(type: 'submit', class: "btn btn-success btn-block") do %>
          <span class="glyphicon glyphicon-log-in"></span> Ingresar 
        <% end %>
      <% end %>
      <%= render "usuarios/shared/links" %>
    </div>
  </div>
</div>

