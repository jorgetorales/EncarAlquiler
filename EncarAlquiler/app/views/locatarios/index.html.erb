<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h1 class="mycss">
        Locatarios
        <%= link_to  glyph(:plus), new_locatario_path, class: 'btn btn-primary btn-sm' %>
      </h1>
      <div class="CSS_Table_Example">
        <table>
          <tr>
            <td>Nombre</td>
            <td>Apellido</td>
            <td>CI</td>
            <td>Telefono</td>
            <td>Email</td>
            <td>Acciones</td>        
          </tr>
          <% @locatarios.each do |locatario| %>
            <tr>
              <td><center><%= locatario.nombre %></center></td>
              <td><center><%= locatario.apellido %></center></td>
              <td><center><%= locatario.ci %></center></td>
              <td><center><%= locatario.telefono %></center></td>
              <td><center><%= locatario.email %></center></td>
              <td><center>
                  <%= link_to glyph(:eye_open), locatario, class: 'btn btn-info btn-sm' %>
                  <%= link_to glyph(:pencil), edit_locatario_path(locatario), class: 'btn btn-warning btn-sm' %>
                  <%= link_to glyph(:trash), locatario, method: :delete, data: { confirm: 'Estas seguro?' }, class: 'btn btn-danger btn-sm'  %>
              </center></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
