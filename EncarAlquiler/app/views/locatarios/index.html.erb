<div class="container">
  <h1 class="text-center text-uppercase">
    Locatarios
    <th>
      <%= link_to  glyph(:plus), new_locatario_path, class: 'btn btn-primary btn-sm' %>
    </th>
  </h1>
  
    <div class="table">
      <table class="table table-striped">
        <thead>
          <tr class="info">
            <th class="text-center">Nombre</th>
            <th class="text-center">Apellido</th>
            <th class="text-center">CI</th>
            <th class="text-center">Telefono</th>
            <th class="text-center">Email</th>
            <th class="text-center">Acciones</th>        
            
          </tr>
        </thead>

        <tbody>
          <% @locatarios.each do |locatario| %>
            <tr class="text-center">
              <td><%= locatario.nombre %></td>
              <td><%= locatario.apellido %></td>
              <td><%= locatario.ci %></td>
              <td><%= locatario.telefono %></td>
              <td><%= locatario.email %></td>
              <td>
                
                  <%= link_to glyph(:eye_open), locatario, class: 'btn btn-info btn-sm' %>
                
                
                  <%= link_to glyph(:pencil), edit_locatario_path(locatario), class: 'btn btn-warning btn-sm' %> 
                
                  <%= link_to glyph(:trash), locatario, method: :delete, data: { confirm: 'Estas seguro?' }, class: 'btn btn-danger btn-sm'  %>
              
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>