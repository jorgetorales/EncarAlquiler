<%= form_for(@locatario) do |f| %>
  <div class="container">
  <div class="col-md-12">
  <% if @locatario.errors.any? %>
    <div  class="alert alert-dismissible alert-danger">
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <h2><%= pluralize(@locatario.errors.count, "error") %> complete los datos antes de guardar:</h2>
      <ul>
      <% @locatario.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  </div>
  </div>
  <div class="container">
  <div class="col-md-12">
  <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <thead>
        <tr class="info">
          <th class="text-center">
            <%= f.label :nombre %>
          </th>
          <th class="text-center">
            <%= f.label :apellido %>
          </th>
          <th class="text-center">
            <%= f.label :ci %>
          </th>
          <th class="text-center">
            <%= f.label :telefono %>
          </th>
          <th class="text-center">
            <%= f.label :email %>
          </th>
          
          <!--ACCIONES-->
          <th class="text-center">
            Acciones
          </th>

        </tr>
      </thead>

      <tbody>
          <tr class="text-center">
            <td><%= f.text_field :nombre, class:"form-control input-sm" %></td>
            <td><%= f.text_field :apellido, class:"form-control input-sm" %></td>
            <td><%= f.text_field :ci, class:"form-control input-sm"%></td>
            <td><%= f.text_field :telefono, class:"form-control input-sm" %></td>
            <td><%= f.text_field :email, class:"form-control input-sm" %></td>

            <!--BOTONES EN ACCIONES en new habitaciones-->
            <td>
               <%= button_tag(type: 'submit', class: "btn btn-success btn-sm") do %>
                  <span class="glyphicon glyphicon-floppy-disk"></span>
                <% end %>

                <%= link_to glyph(:remove), @locatario, class: 'btn btn-danger btn-sm' %>

                <%= link_to glyph(:arrow_left), locatarios_path, class: 'btn btn-info btn-sm' %>
            </td>
          </tr>
      </tbody>
    </table>
  </div>
  </div>  
  </div>  
<% end %>
