<div class="col-md-10 col-md-offset-1">
    <h1 class="text-center text-uppercase">
      Habitaciones
          <%= link_to glyph(:plus), new_habitacion_path, class: 'btn btn-primary btn-sm' %>
    </h1>
</div>
<div class="col-md-10 col-md-offset-1">
  <div class="CSS_Table_Example">
    <table>
      <tr>
          <td>Nombre</td>
          <td>Tipo</td>
          <td>Descripcion</td>
          <td>Precio</td>
          <td>Estado</td>
          <td>Acciones</td>
        </tr>
          <% @habitaciones.each do |habitacion| %>
          <tr>
            <td><center><%= habitacion.numero %></center></td>
            <td><center><%= habitacion.tipo_id %></center></td>
            <td><center><%= habitacion.descripcion %></center></td>
            <td><center><%= habitacion.precio %></center></td>
            <td><center><%= habitacion.estado %></center></td>
            <td><center>
                <%= link_to glyph(:eye_open), habitacion, class: 'btn btn-info btn-sm' %>
                <%= link_to glyph(:pencil), edit_habitacion_path(habitacion), class: 'btn btn-warning btn-sm' %> 
                <%= link_to glyph(:trash), habitacion, method: :delete, data: { confirm: 'Estas Seguro?' }, class: 'btn btn-danger btn-sm' %>
            </center></td>
          </tr>
        <% end %>
    </table>
  </div>
  </div>