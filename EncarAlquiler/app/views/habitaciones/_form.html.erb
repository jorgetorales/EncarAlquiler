<%= form_for(@habitacion) do |f| %>
<div class="container">
  <div class="col-md-12">
  <% if @habitacion.errors.any? %>
    <div  class="alert alert-dismissible alert-danger">
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <h2><%= pluralize(@habitacion.errors.count, "error") %> complete los datos antes de guardar:</h2>
      <ul>
      <% @habitacion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  </div>
  </div>
  <div class="container">
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead>
          <tr class="info">
            <th class="text-center">
              <%= f.label :numero %>
            </th>
            <th class="text-center">
              <%= f.label :tipo_id %>
            </th>
            <th class="text-center">
              <%= f.label :descripcion %>
            </th>
            <th class="text-center">
              <%= f.label :precio %>
            </th>
            <th class="text-center">
              <%= f.label :estado %>
            </th>
            <!--ACCIONES-->
            <th class="text-center">
              Acciones
            </th>
          </tr>
        </thead>

        <tbody>
            <tr class="text-center">
              <td><%= f.text_field :numero, class:"form-control input-sm" %></td>
              <td> <%= f.collection_select(:tipo_id, Tipo.all, :id, :nombre, { prompt: true}, {:class=>'form-control select2'}) %></td>
              <td><%= f.text_field :descripcion, class:"form-control input-sm" %></td>
              <td><%= f.text_field :precio, class:"form-control input-sm" %></td>
              <td><%= f.text_field :estado, class:"form-control input-sm" %></td>

              <!--BOTONES EN ACCIONES en new habitaciones-->
              <td>
                <%= button_tag(type: 'submit', class: "btn btn-success btn-sm") do %>
                    <span class="glyphicon glyphicon-floppy-disk"></span>
                  <% end %>

                  <%= link_to glyph(:remove), @habitacion, class: 'btn btn-danger btn-sm' %>

                  <%= link_to glyph(:arrow_left), habitaciones_path, class: 'btn btn-info btn-sm' %>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  </div>
<% end %>
